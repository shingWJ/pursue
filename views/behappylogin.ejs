<% include header.ejs %>
<header class="header-latest jumbotron">
  <div class="container">
    <h3>当时光碾过青春</h3>
    <h3>我将以快乐注解悲伤</h3>
  </div>
</header>
<div id="login-back" class='happy-login-div'>
<% if (success) { %>
  <div class="sucess"><%= success %></div>
<% } %>
<% if (error) { %>
  <div class="error"><%= error %> </div>
<% } %>
<form method="post" class="happy-login-form">
  <div class="form-group">
      <label for="account">账号</label>
      <input type="text" class="form-control" id="account" name="account" placeholder="请输入账号">
    </div>
    <div class="form-group">
      <label for="password">密码</label>
      <input type="password" class="form-control" id="password" name="password" placeholder="请输入密码">
    </div>
  <button id="logon" type="submit" class="btn btn-primary behappy-login">登录</button>
</form>
</div>
